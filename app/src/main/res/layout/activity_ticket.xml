<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Ticket Details TextView -->
    <TextView
        android:id="@+id/ticket_details_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket details will be displayed here"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <!-- Ticket Image View -->
    <ImageView
        android:id="@+id/ticket_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ticket_details_view"
        android:src="@drawable/active_image" />

    <!-- Single Print Ticket Button -->
    <Button
        android:id="@+id/print_ticket_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imprimer le ticket"
        android:textSize="16sp"
        android:layout_below="@id/ticket_image_view"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
